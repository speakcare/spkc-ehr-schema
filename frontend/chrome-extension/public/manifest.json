{
  "short_name": "SpeakCare",
  "name": "SpeakCare - speech to EMR",
  "version": "0.1.4",
  "manifest_version": 3,
  "description": "Recording nurse interaction with patient and converting into EMR charts.",
  "icons": {
    "16": "icons/speakcare-icon-16.png",
    "48": "icons/speakcare-icon-48.png",
    "128": "icons/speakcare-icon-128.png"
  },
  "action": {
    "default_title": "Click to open SpeakCare panel"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://airtable.com/appRFbM7KJ2QwCDb6/*",
    "https://*.pointclickcare.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}