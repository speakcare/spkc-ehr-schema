{
  "short_name": "speakcare",
  "name": "SpeakCare nursing speech to EMR",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "A Chrome extension recording nurse interaction with patient and converting into EMR charts.",
  "icons": {
    "16": "favicon.ico",     
    "48": "logo192.png",      
    "128": "logo512.png"      
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "favicon.ico"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://airtable.com/appRFbM7KJ2QwCDb6/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
